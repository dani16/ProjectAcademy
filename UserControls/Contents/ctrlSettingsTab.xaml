<UserControl x:Class="ctrlSettingsTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectAcademy"
             mc:Ignorable="d" Margin="0">
    <Border Style="{DynamicResource styleTabContent}">
        <Grid Margin="25,20,25,20" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <local:ctrlSettingsTabControl/>
        </Grid>
    </Border>
</UserControl>
