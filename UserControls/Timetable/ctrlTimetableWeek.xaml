<UserControl x:Class="ctrlTimetableWeek"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             MinWidth="280">
    <Grid x:Name="gridWeekRow">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!-- Timeclass -->
            <Border Grid.Row="0" BorderBrush="Black" BorderThickness="0,0,1,1">
                <TextBlock Name="timeClass" Style="{DynamicResource styleTextBlocksForms}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0" FontFamily="14" FontWeight="Normal"/>
            </Border>            
        </Grid>
    </Grid>
</UserControl>
